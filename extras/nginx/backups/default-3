# Default server configuration
#
server {
	listen 80 default_server;

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name reactale.com www.reactale.com;

	location / {
		proxy_pass http://localhost:9090/; # Reactale running on 9090
	        proxy_http_version 1.1;
	        proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_cache_bypass $http_upgrade;
	}
}

server {
	listen 80;

	server_name reacto.reactale.com www.reacto.reactale.com;

	location / {
		proxy_pass http://localhost:5000/; # Reacto running on 5000
	        proxy_http_version 1.1;
	        proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_cache_bypass $http_upgrade;
	}
}
